<div id="videos-container" class="contents-container">
  <div class="video-card">
    <div class="video-title">
      <h1>{{video.title}}</h1>
      <a id="edit" class="add-video-button" href="/videos/{{video._id}}/edit">Edit</a>
      <form method="post" action="/videos/{{video._id}}/deletions">
        <input id="delete" class="input-button" type="submit" value="Delete">
      </form>
    </div>
    <iframe class="video-player" width="420" height="315" src="{{video.videoUrl}}" frameborder="0" allowfullscreen></iframe>
    <div class="video-description">
      <p>{{video.description}}</p>
    </div>
  </div>
</div>
